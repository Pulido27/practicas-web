<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href=/assets/style.css type=text/css rel=stylesheet />
    <title>Usuarios</title>
</head>
<body>
    <div id="titulo">
        <p>Catalogo de usuarios</p>
    </div>
    <div id="main-container">
        <table>
            <tr>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Tipo de Sangre</th>
                <th>NSS</th>
                <th></th>
                <th></th>
            </tr>
            <% Object.keys(Persons).forEach(function(prop) { %>
                <tr>
                    <td><%= Persons[prop].nombre%></td>
                    <td style="text-align: center"><%= Persons[prop].edad%></td>
                    <td style="text-align: center"><%= Persons[prop].tipoSangre%></td>
                    <td style="text-align: center"><%= Persons[prop].nss%></td>
                    <td><a href="<%= `findById/${Persons[prop]._id}` %>">Actualizar</a></td>
                    <td><a href="<%= `deletePerson/${Persons[prop]._id}` %>" onclick="return confirmar()" class="delete" >Eliminar</a></td>
                </tr>
        <%});%>
        </table>
    </div>
    <div id="agregarUsuario">
        <a href="addPerson.ejs">Agregar</a> 
    </div>

    <script type="text/javascript">
        function confirmar() 
        {
            let eliminar = confirm('Â¿Estas seguro de eliminar?'); 
            if(eliminar){
                return true;
            }else{
                return false
            };
                 
        }
    </script>

    
</body>
</html>